
@{
    Layout = "~/Views/Shared/_LayoutBill.cshtml";
}

<div v-cloak id="vApplicationDetail" class="backshow">
    <div class="breaklist">
        <span class="fl first_title">代<span v-if="indexData.TypeCode=='1'">付</span><span v-if="indexData.TypeCode=='2'">收</span>款申请详情</span>
        <span class="fl second_title" v-on:click="history.back(-1)">返回</span>
    </div>
    <div class="order_detail">
        <div class="order_title">
            <span class="ml11">申请编号：<span class="txt1">{{indexData.ID}}</span></span>
            <span class="ml157">申请状态：<span class="txt2">{{indexData.Status}}</span></span>
            <span class="ml142">申请日期：{{indexData.CreateDate}}</span>
        </div>
        <div class="order_content">
            <div v-if="indexData.TypeCode=='1'">
                <p class="title mt30 mb20">代<span v-if="indexData.TypeCode=='1'">付</span><span v-if="indexData.TypeCode=='2'">收</span>款信息</p>
                <div class="info_content">
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">供应商名称：</span>
                            <span class="i_content">{{indexData.SupplierName}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">供应商名称(英文)：</span>
                            <span class="i_content">{{indexData.SupplierEnglishName}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">供应商银行名称：</span>
                            <span class="i_content">{{indexData.Bank}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">供应商银行地址：</span>
                            <span class="i_content">{{indexData.BankAddress}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">银行账号：</span>
                            <span class="i_content">{{indexData.Account}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">供应商银行地址：</span>
                            <span class="i_content">{{indexData.SwiftCode}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">代<span v-if="indexData.TypeCode=='1'">付</span><span v-if="indexData.TypeCode=='2'">收</span>款金额：</span>
                            <span class="i_content txt_yellow">{{indexData.Price}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">支付币种：</span>
                            <span class="i_content">{{indexData.Currency}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">支付方式：</span>
                            <span class="i_content ">{{indexData.Methord}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div v-if="indexData.TypeCode=='2'">
                <p class="title mt30 mb20">代收款信息</p>
                <div class="info_content">
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">客户付款人：</span>
                            <span class="i_content">{{indexData.PayerName}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">付款人银行：</span>
                            <span class="i_content">{{indexData.PayerBank}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">付款人银行账号：</span>
                            <span class="i_content">{{indexData.PayerAccount}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">支付方式：</span>
                            <span class="i_content">{{indexData.Methord}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">公司受益人：</span>
                            <span class="i_content">{{indexData.Account}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">代收金额：</span>
                            <span class="i_content txt_yellow">{{indexData.Price}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="file_content">
                <div class="overhide">
                    <div class="file_l fl">
                        <p class="title mt30 mb20">{{indexData.File.Type}}</p>
                        <div class="mb10">
                            <i class="invoice_icon"></i>
                            <span class="f_name">{{indexData.File.Name}}</span>
                            <a class="link1" :href="indexData.File.URL" target="_blank">下载</a>
                        </div>
                        <div v-if="indexData.File.Name==''||indexData.File.Name==null">
                            <span class="txt_yellow">提示：未上传</span>
                        </div>
                    </div>
                    <div class="file_r fl"></div>
                </div>
            </div>
            <div class="product_content">
                <p class="title mt30 mb20">产品信息</p>
                <table border="0" cellspacing="0" cellpadding="0" style="word-wrap:break-word; word-break:break-all;">
                    <tr>
                        <th class="first_th" style="width:22px;">#</th>
                        <th style="width:50px;">批号</th>
                        <th style="width:110px;">品牌</th>
                        <th style="width:120px;">型号</th>
                        <th style="width:110px;">产地</th>
                        <th style="width:50px;">数量</th>
                        <th style="width:58px;">单位</th>
                        <th style="width:50px;">进价总值</th>
                        <th style="width:79px;">毛重(kg)</th>
                        <th style="width:79px;">体积(m³)</th>
                    </tr>
                    <tr v-for="(item,index) in indexData.OrderItems">
                        <td>{{index+1}}</td>
                        <td>{{item.DateCode}}</td>
                        <td style="word-wrap:break-word;word-break:break-all;padding:0 5px;">{{item.Manufacturer}}</td>
                        <td style="word-wrap:break-word;word-break:break-all;padding:0 5px;">{{item.PartNumber}}</td>
                        <td>{{item.OriginLabel}}</td>
                        <td>{{item.Quantity}}</td>
                        <td>{{item.UnitLabel}}</td>
                        <td>{{item.TotalPrice}}</td>
                        <td>{{item.GrossWeight}}</td>
                        <td>{{item.Volume}}</td>
                    </tr>
                    <tr>
                        <td colspan="10"><span class="txt1">订单总金额：</span><span class="txt2">{{indexData.TotalMoney}}</span></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    var vApplicationDetail = new Vue({
        el: "#vApplicationDetail",
        data: function () {
            return {
                indexData:@Html.Raw(Json.Encode(Model)),
            }
        },
    });
</script>

