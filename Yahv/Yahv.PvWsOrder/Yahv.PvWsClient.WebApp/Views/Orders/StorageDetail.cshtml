
@{
    Layout = "~/Views/Shared/_LayoutOrder.cshtml";
}

<div v-cloak id="vStorageDetail" class="backshow">
    <div class="breaklist">
        <span class="fl first_title">订单详情</span>
        <span class="fl second_title" v-on:click="history.back(-1)">返回</span>
    </div>
    <div class="order_detail">
        <div class="order_title">
            <span class="ml11">订单编号：<span class="txt1">{{indexData.ID}}</span></span>
            <span class="ml157">订单状态：<span class="txt2">{{indexData.MainStatus}}</span></span>
            <span class="ml142">下单日期：{{indexData.CreateDate}}</span>
        </div>
        <div class="order_content">
            <div>
                <p class="title mt30 mb20">基本信息</p>
                <div class="info_content">
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">发货地：</span>
                            <span class="i_content">{{indexData.Origin}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">供应商：</span>
                            <span class="i_content">{{indexData.SupplierName}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">货值币种：</span>
                            <span class="i_content">{{indexData.PayCurrency}}</span>
                        </div>
                        <div class="fl overhide">
                            <span class="i_title">是否代付货款：</span>
                            <span class="i_content">{{indexData.IsPrePaid}}</span>
                        </div>
                    </div>
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">结算币种：</span>
                            <span class="i_content">{{indexData.SettlementCurrency}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="order_div"><span>有疑问请咨询：<span class="link">跟单员</span></span></div>
            <div>
                <p class="title mt30 mb20">交货信息</p>
                <div class="info_content">
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">交货方式：</span>
                            <span class="i_content txt_yellow">{{indexData.DeliveryTypeName}}</span>
                        </div>
                    </div>
                    <div v-if="indexData.DeliveryType=='1'">
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">提货时间：</span>
                                <span class="i_content">{{indexData.TakingDate}}</span>
                            </div>
                            <div class="fl overhide">
                                <span class="i_title">提货地址：</span>
                                <span class="i_content">{{indexData.TakingDetailAddress}}</span>
                            </div>
                        </div>
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">联系人：</span>
                                <span class="i_content">{{indexData.TakingContact}}</span>
                            </div>
                            <div class="fl overhide">
                                <span class="i_title">联系号码：</span>
                                <span class="i_content">{{indexData.TakingPhone}}</span>
                            </div>
                        </div>
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">提货文件：</span>
                                <span class="i_content"><a download v-if="indexData.DeliveryFiles!=''" class="file_link" target="_blank" :href="indexData.DeliveryFiles">查看提货文件</a></span>
                            </div>
                        </div>
                    </div>
                    <div v-if="indexData.DeliveryType=='2'">
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">是否垫付运费：</span>
                                <span class="i_content">{{indexData.IsPayFreight}}</span>
                            </div>
                        </div>
                    </div>
                    <div v-if="indexData.DeliveryType=='3'||indexData.DeliveryType=='4'">
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">是否垫付运费：</span>
                                <span class="i_content">{{indexData.IsPayFreight}}</span>
                            </div>
                            <div class="fl overhide">
                                <span class="i_title">运单号：</span>
                                <span class="i_content">{{indexData.Code}}</span>
                            </div>
                        </div>
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">承运商：</span>
                                <span class="i_content">{{indexData.CarrierID}}</span>
                            </div>
                            <div class="fl overhide">
                                <span class="i_title">件数：</span>
                                <span class="i_content">{{indexData.PartsTotal}}</span>
                            </div>
                        </div>
                        <div class="overhide mb10">
                            <div class="fl overhide  mr88">
                                <span class="i_title">子运单号：</span>
                                <span class="i_content">{{indexData.Subcodes}}</span>
                            </div>
                            <div v-if="indexData.DeliveryType=='4'" class="fl overhide">
                                <span class="i_title">航次号：</span>
                                <span class="i_content">{{indexData.VoyageNumber}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <p class="title mt30 mb20">交货服务要求</p>
                <div class="info_content">
                    <div class="overhide mb10">
                        <div class="fl overhide  mr88">
                            <span class="i_title">是否拆箱验货：</span>
                            <span class="i_content">{{indexData.IsUnpacking}}</span>
                        </div>
                        @*<div class="fl overhide">
                            <span class="i_title">是否代检测：</span>
                            <span class="i_content">{{indexData.IsTesting}}</span>
                        </div>*@
                    </div>
                </div>
            </div>
