            },
            getBenefitOptions: function (id) {
                if (JSON.stringify(this.baseData) != "{}") {
                    var arr = this.baseData.BeneficiariesOptions.filter(function (v, i) {
                        if (v.supplierID == id) {
                            return v;
                        }
                    });
