                }
            },
            downloadTemplates: function () {
                location.href = "/Template/即收即发产品导入模板.xlsx";
            },
            //获取下拉框的label
            getOptionsLabel: function (row, label, value, list) {
                if (value != null && value != "") {
                    let obj = {};
                    obj = list.find(function (item) {//这里的selectList就是上面遍历的数据源
                        return item.value === value;//筛选出匹配数据
                    });
                    if (obj != null || obj != "") {
                        row[label] = obj.text;
                    }
